<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".instruccionesActivity">

    <ImageView
        android:layout_width="218dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo_inacap_400x109" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_app_128x128"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_titulo"
        android:layout_gravity="center"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/txv_instucciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txv_instrucciones"
        android:layout_gravity="center"
        />

</LinearLayout>